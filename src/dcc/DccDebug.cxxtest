TEST(DccDebug, Idle)
{
    EXPECT_EQ(
        "[dcc][ff 00 ff] Idle packet", packet_to_string(Packet(Packet::DCC_IDLE())));
}

TEST(DccDebug, BroadcastEstop)
{
    Packet pkt;
    pkt.set_dcc_speed14(
        DccShortAddress(0), true, false, Packet::EMERGENCY_STOP);
    EXPECT_EQ("[dcc][00 61 61] Broadcast SPD F E-STOP", packet_to_string(pkt));
}

TEST(DccDebug, ShortAddressEstop)
{
    Packet pkt;
    pkt.set_dcc_speed14(
        DccShortAddress(42), true, false, Packet::EMERGENCY_STOP);
    EXPECT_EQ("[dcc][2a 61 4b] Short Address 42 SPD F E-STOP", packet_to_string(pkt));
}

TEST(DccDebug, LongAddressEstop)
{
    Packet pkt;
    pkt.set_dcc_speed14(
        DccLongAddress(842), true, false, Packet::EMERGENCY_STOP);
    EXPECT_EQ("[dcc][c3 4a 61 e8] Long Address 842 SPD F E-STOP", packet_to_string(pkt));
    pkt.clear();
    pkt.set_dcc_speed14(
        DccLongAddress(42), true, false, Packet::EMERGENCY_STOP);
    EXPECT_EQ("[dcc][c0 2a 61 8b] Long Address 42 SPD F E-STOP", packet_to_string(pkt));
}

TEST(DccDebug, Speed28_0)
{
    Packet pkt;
    pkt.set_dcc_speed28(DccShortAddress(42), true, 0);
    EXPECT_EQ("[dcc][2a 60 4a] Short Address 42 SPD F 0", packet_to_string(pkt));
    pkt.clear();
    pkt.set_dcc_speed28(DccShortAddress(42), false, 0);
    EXPECT_EQ("[dcc][2a 40 6a] Short Address 42 SPD R 0", packet_to_string(pkt));
    pkt.clear();
    pkt.set_dcc_speed28(DccLongAddress(42), false, 0);
    EXPECT_EQ("[dcc][c0 2a 40 aa] Long Address 42 SPD R 0", packet_to_string(pkt));
}

