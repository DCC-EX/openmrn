TEST(DccDebug, F0_4)
{
    Packet pkt;
    pkt.add_dcc_address(DccShortAddress(3));
    pkt.add_dcc_function0_4(0b10111);
    EXPECT_EQ("[dcc][03 9b 98] Short Address 3 F[0-4]=11101", packet_to_string(pkt));
    pkt.clear();
    pkt.add_dcc_address(DccShortAddress(3));
    pkt.add_dcc_function0_4(0b10110);
    EXPECT_EQ("[dcc][03 8b 88] Short Address 3 F[0-4]=01101", packet_to_string(pkt));
}

