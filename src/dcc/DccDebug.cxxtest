TEST(DccDebug, marklin)
{
    Packet pkt;
    pkt.start_mm_packet();
    pkt.add_mm_address(MMAddress(13), true);
    pkt.add_mm_speed(2);
    EXPECT_EQ("[marklin][repeat 2 times][03 f3 f0]", packet_to_string(pkt));
}

